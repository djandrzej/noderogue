{
  "name": "noderogue-game",
  "version": "1.0.1",
  "description": "Roguelike dungeon crawler for terminals",
  "keywords": [
    "crawler",
    "dungegon",
    "game",
    "roguelike",
    "rpg"
  ],
  "homepage": "https://github.com/rafalmaciejewski/noderogue#readme",
  "bugs": {
    "url": "https://github.com/rafalmaciejewski/noderogue/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafalmaciejewski/noderogue.git"
  },
  "license": "MIT",
  "author": "Rafa≈Ç Maciejewski <rafaljestsuper@gmail.com>",
  "main": "lib/index.js",
  "bin": {
    "noderogue": "./bin/noderogue.js"
  },
  "files": [
    "lib",
    "bin"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "start": "ts-node src/run.tsx",
    "clean": "rimraf lib",
    "game": "node lib/run.js",
    "type-check": "tsc --noEmit",
    "watch": "npm run build -- -w",
    "release": "semantic-release",
    "lint": "eslint --max-warnings 0 './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint . --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "blessed": "0.1.81",
    "blessed-contrib": "4.8.21",
    "chalk256": "5.1.0",
    "keypress": "0.2.1",
    "lodash": "4.17.21",
    "node-gameloop": "0.1.4",
    "react": "17.0.2",
    "react-blessed": "0.7.2",
    "react-dom": "17.0.2",
    "react-redux": "7.2.3",
    "redux": "4.0.5"
  },
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.2.0",
    "@semantic-release/npm": "7.1.0",
    "@semantic-release/release-notes-generator": "9.0.2",
    "@types/node": "14.14.37",
    "@types/react": "17.0.3",
    "@types/react-blessed": "0.3.2",
    "@types/react-dom": "17.0.3",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.23.0",
    "eslint-config-getresponse": "5.1.5",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-jest": "24.3.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "semantic-release": "17.4.2",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  }
